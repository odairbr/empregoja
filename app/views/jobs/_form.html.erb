<% if @job.errors.any? %>
  <%= label_error %>
<% end %>
<section>
  <%= simple_form_for @job, {html: {class: "form-horizontal"}} do |f| %>
    <div class="form-group">
      <%= f.input :title, label: 'Título', class: "form-control",  autofocus: true %>
    </div>
    <div class="form-group">
      <%= f.input :location, label: 'Local' %>
    </div>
    <div class="form-group">
      <%= f.input :category_id, label: 'Categoria', collection: @categories %>
    </div>
    <div class="form-group">
      <%= f.input :company_id, label: 'Empresa', collection: @companies %>
    </div>
    <div class="form-group">
      <%= f.input :description, as: :text, label: 'Descrição' %>
    </div>
    <div class="checkbox">
      <%= f.input :featured, label: 'Destaque' %>
    </div>
    <div>
        <%= f.submit submit_text %>
    </div>
  <% end %>
</section>
