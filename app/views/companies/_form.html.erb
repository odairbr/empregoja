<% if @company.errors.any? %>
  <%= label_error %>
<% end %>
<section>
<%= simple_form_for @company do |f| %>
  <div class="form-group">
    <%= f.input :name, label: 'Nome', class: "form-control",  autofocus: true %>
  </div>
  <div class="form-group">
    <%= f.input :location, label: 'Local'%>
  </div>
  <div class="form-group">
    <%= f.input :mail, label: 'Email' %>
  </div>
  <div class="form-group">
    <%= f.input :phone, label: 'Telefone' %>
  </div>
  <div>
    <%= f.submit submit_text %>
  </div>
<% end %>
</section>
